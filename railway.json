{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "pnpm install --no-frozen-lockfile"
  },
  "deploy": {
    "startCommand": "node server.js",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 5
  },
  "env": {
    "PNPM_HOME": "/root/.local/share/pnpm",
    "PATH": "$PNPM_HOME:$PATH"
  }
}
